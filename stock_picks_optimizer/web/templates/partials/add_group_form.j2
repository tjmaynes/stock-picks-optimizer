<div id="swappable-content"></div>
<form id="stock-group-form"
      method="post"
      action="{{ url_for('add_group') }}"
      hx-swap="outerHTML"
      hx-target="#swapable-content">
    <label>
        Name:
        <input required type="text" name="name" placeholder="Name">
    </label>
    {% include "partials/add_pick_section.j2" %}
    <div>
        <button hx-get="{{ url_for('add_pick') }}"
                hx-target="#stock-pick"
                hx-swap="afterend">Add pick</button>
        <a href="{{ url_for('index') }}">Cancel</a>
        <button hx-get="{{ url_for('add_group') }}" hx-target="#stock-group-form">Submit</button>
    </div>
</form>
